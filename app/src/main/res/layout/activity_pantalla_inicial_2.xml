<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pantalla2"
    tools:context=".PantallaInicial2">

    <Button
        android:id="@+id/btnIngresarInicio2"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="280dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/btn2_1nofuncional" />

    <Button
        android:id="@+id/btnRegistrarInicio2"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="280dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/btn2_2" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etContraseña"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="5dp"
        android:hint="  Email" />

    <EditText
        android:id="@+id/etContraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnIng"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="20dp"
        android:hint="  Contraseña"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnIng"
        android:layout_width="320dp"
        android:layout_height="56dp"
        android:layout_above="@+id/btnOlvidoContraseña"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:background="@drawable/btn2_3" />

    <Button
        android:id="@+id/btnOlvidoContraseña"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/btn2_4" />

</RelativeLayout>