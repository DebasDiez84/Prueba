<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pantalla3"
    tools:context=".PantallaRegistrar1">


    <Button
        android:id="@+id/btnIngresarRegistro"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_above="@+id/etNombres"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn3_1" />



    <EditText
        android:id="@+id/etNombres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etApellidos"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-2dp"
        android:layout_marginLeft="110dp"
        android:hint="  Nombres" />

    <EditText
        android:id="@+id/etApellidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etFechaNacimiento"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-3dp"
        android:layout_marginLeft="110dp"
        android:hint="  Apellidos" />

    <EditText
        android:id="@+id/etFechaNacimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etDocumentoID"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="110dp"
        android:hint="  Fecha Nacimiento"
        android:inputType="date"/>

    <EditText
        android:id="@+id/etDocumentoID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-3dp"
        android:layout_marginLeft="110dp"
        android:hint="  Documento de identidad"
        android:inputType="number"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etContraseña"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-3dp"
        android:layout_marginLeft="110dp"
        android:hint="  Email" />

    <EditText
        android:id="@+id/etContraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnRegistrarGuardar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="110dp"
        android:hint="  Contraseña"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btnRegistrarGuardar"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:background="@drawable/btn3_2" />

</RelativeLayout>